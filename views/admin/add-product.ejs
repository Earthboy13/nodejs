<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (errorMessage.length > 0) { %>
        <div class="user-message user-message--error"><%=errorMessage[0]%></div>
        <% } %>
        <form class="product-form" action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%=oldinput.title%>">
            </div>
            <div class="form-control">
                <label for="img">Image URL</label>
                <input type="file" name="img" id="img">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" placeholder="0.00" step="0.01" name="price" id="price" value="<%=oldinput.price%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" value="<%=oldinput.description%>"></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button type=submit>Add Product</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>