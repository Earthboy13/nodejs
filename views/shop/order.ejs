<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
        <h1>There are no orders</h1>
        <% } else { %>
        <ul class="orders">
            <% orders.forEach(order => { %>
            <li class="orders__item">
                <h1>Order - # <%= order._id %></h1>
                <ul class="orders__products">
                    <% order.items.forEach(item => { %>
                    <li class="orders__products-item"><%= item.product.title %> - price: $ <%= item.product.price %> / qty: (<%= item.qty %>)</li>
                    <% }); %>
                    <hr>
                    <div>
                    <h1 style="display: inline;">Total Price: $ <%= order.totalPrice %></h1>
                    <a href="/orders/<%= order._id %>" style="margin-left: 86%; text-decoration: none;display: inline; bottom: 50%;"><button class="btn"style="display: inline;">Invoice</button></a>
                    </div>
                    <hr>
                </ul>
            </li>
            <% }); %>
        </ul>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>