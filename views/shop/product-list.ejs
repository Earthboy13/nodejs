<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if(prods.length > 0) { %>
            <div class="grid">
                <% for(let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imgUrl %>" alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <form class="product-form" action="/products/detail" method="GET">
                                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                <input type="hidden" value="<%= product._id %>" name="id">
                                <button type=submit class="btn">Detail</button>
                            </form>
                            <% if (isLoggedIn) { %>
                            <form class="product-form" action="/cart" method="POST">
                                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                <input type="hidden" value="<%= product._id %>" name="id">
                                <button type=submit class="btn">Add to Cart</button>
                            </form>
                            <% } %>
                        </div>
                    </article>
                <% } %>
            </div>
            <section class="pagination">
                <% if(hasPreviousPage) {%>
                    <% if(previousPage > 1) {%>
                        <a href="/products?page=<%= previousPage %>">Previous</a>
                    <% } %>
                    <a href="/products?page=<%= previousPage %>"><%= previousPage %></a>      
                <% } %>
                <a href="/products?page=<%= currentPage %>"><%= currentPage %></a>
                <% if(hasNextPage) {%>
                    <a href="/products?page=<%= nextPage %>"><%= nextPage %></a>
                        <% if( nextPage < lastPage) {%>
                            <a href="/products?page=<%= nextPage %>">Next</a>
                        <% }%>
                <% } %>
            </section>
        <% } else { %>
            <h1>No Products</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>